// tsconfig.json
{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "pretty": true,
      "lib": ["es6", "esnext.asynciterable", "es7"],
      "sourceMap": true,
      "target": "es6",
      "outDir": "./build",
      "baseUrl": "./src"
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}
